{
  "name": "notebook-serializer-example",
  "displayName": "notebook-serializer-example",
  "description": "Notebook using Serializer API example",
  "version": "0.0.1",
  "extensionKind": [
    "ui"
  ],
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onNotebook:vdm-notebook-renderer"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "notebookRenderer": [
      {
        "id": "vdm-notebook-serializer",
        "entrypoint": "./out/client/index.js",
        "displayName": "VDM Notebook Serializer",
        "mimeTypes": [
          "x-application/vdm-web-output"
        ]
      }
    ],
    "notebooks": [
      {
        "id": "vdm-notebook-renderer",
        "type": "vdm-notebook-renderer",
        "displayName": "VDM Notebook Renderer",
        "selector": [
          {
            "filenamePattern": "*.vdmnb"
          }
        ]
      }
    ]
  },
  "scripts": {
    "compile": "npm run compile:extension && npm run compile:client",
    "compile:extension": "tsc -b",
    "compile:client": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "watch": "concurrently -r \"npm:watch:*\"",
    "watch:extension": "tsc -b --watch",
    "watch:client": "webpack --mode development --watch",
    "dev": "concurrently -r npm:watch:extension npm:watch:client"
  },
  "devDependencies": { 
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.57.0",
    "@types/vscode-notebook-renderer": "^1.57.8",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^5.3.0",
    "css-loader": "^6.7.3",
    "eslint": "^7.27.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-notebook-error-overlay": "^1.0.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "form-data": "^4.0.0",
    "node-buffer": "^1.0.3",
    "node-fetch": "^2.6.9",
    "subspawn": "^1.0.1"
  }
}
